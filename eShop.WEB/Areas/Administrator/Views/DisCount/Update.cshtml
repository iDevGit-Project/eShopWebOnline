@model UpdateDisCountViewModel

@{
	ViewData["Title:"] = "پنل مدیریت | ویرایش کدهای تخفیف سمت مدیر";
}

<!-- آدرس مربوط به فایل سی اس اس تاریخ شمسی -->
<link href="/assets/plugins/persiandate/persian-datepicker.css" rel="stylesheet" asp-append-version="true" />
<!--======================================================================================-->
@section scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">شما در حال ویرایش کد تخفیف: <span class="badge badge-light-warning pulse pulse-warning fw-normal FEN"><span class="pulse-ring"></span>@Model.Code</span> هستید.</span>
							<span class="text-muted mt-1 fw-semibold fs-7">ویرایش اطلاعات مربوط به گارانتی جاری در فروشگاه</span>
						</h3>
						<a asp-action="Index" asp-controller="DisCount" class="btn  btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
							<i class="ki-duotone ki-home fs-3">
							</i>
							بازگشت به لیست کد های تخفیف
						</a>
					</div>
					<!--begin::Ribbon wrapper 1-->
					<div class="overflow-hidden position-relative card-rounded">
						<!--begin::Ribbon-->
						<div class="ribbon ribbon-triangle ribbon-top-start border-warning">
							<!--begin::Ribbon icon-->
							<div class="ribbon-icon mt-n5 ms-n6">
								<i class="ki-outline ki-information fs-2 text-white"></i>
							</div>
							<!--end::Ribbon icon-->
						</div>
						<!--end::Ribbon-->
						<!--begin::Card-->
						<div class="card card-bordered bg-light-warning mb-2">
							<!--begin::Body-->
							<div class="card-body">
								<!--begin::Title-->
								<h2 class="mb-1 text-warning">توجه...!</h2>
								<!--end::Title-->
								<div class="fs-6 text-dark"> کاربرگرامی: هنگام ویرایش کد تخفیف فعال بر روی سایت، امکان تغییر تاریخ شروع و پایان آن وجود ندارد.</div>
							</div>
							<!--end::Body-->
						</div>
						<!--end::Card-->
					</div>
					<!--end::Ribbon wrapper 1-->
					<!--begin:Form-->
					<form asp-controller="DisCount" asp-action="Update"
						  method="post"
						  data-ajax="true"
						  data-callback=""
						  data-action="Refresh"
						  enctype="multipart/form-data">
						<input type="hidden" asp-for="DiscountId" />
						<!--begin::details نمایش-->
						<div class="card mb-5 d-flex flex-column nav-group nav-group-outline mx-auto" id="myForm">
							<!--begin::کارت body-->
							<div class="card-body p-9">
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="Code" class="col-lg-4 fw-semibold fw-bold">
										نام کد تخفیف جدید به انگلیسی.
										<span class="ms-1 FEN" data-bs-toggle="tooltip" title="نمونه کد تخفیف: bahar_1403">
											<i class="ki-outline ki-information fs-7"></i>
										</span>
										<span asp-validation-for="Code" class="badge badge-light-danger mb-1"></span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="Code" id="kt_docs_maxlength_custom_text" maxlength="512 " class="form-control border-warning bg-light-warning text-dark FEN" autocomplete="off" placeholder="Enter the name of the discount code in English or a combination of characters.">
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--begin::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="UserCount" class="col-lg-4 fw-semibold fw-bold">
										تعداد کد تخفیف.
										<span class="ms-1" data-bs-toggle="tooltip" title="راهنمایی: چه تعداد مشتری از این کد میتوانند استفاده کنند؟">
											<i class="ki-outline ki-information fs-7"></i>
										</span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="UserCount" id="kt_docs_maxlength_custom_text" maxlength="512 " class="form-control border-warning bg-light-warning" autocomplete="off" placeholder="چه تعداد مشتری از این کد میتوانند استفاده کنند؟">
									</div>
									<!--end::Col-->
								</div>
								<!--end::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="IsActive" class="col-lg-4 fw-semibold fw-bold">
										فعال یا غیرفعالسازی کد تخفیف.
										<span asp-validation-for="IsActive" class="badge badge-light-danger"></span>
									</label>
									<!--end::Tags-->
									<div class="col-lg-8">
										<div class="d-flex align-items-center border border-dashed border-gray-300 rounded px-7 py-3">
											<!--begin::آیتم-->
											<div class="d-flex flex-aligns-center pe-10 pe-lg-20">
												<div class="form-check form-switch form-check-custom form-check-solid me-10">
													<input asp-for="IsActive" class="form-check-input h-30px w-50px" onclick="confirmdSwitchDiscountCommand()" type="checkbox" id="flexSwitch30x50" style="cursor: pointer;" />
													<label class="form-check-label text-dark fw-bold" for="flexSwitch30x50">
														آیا کد تخفیف جدید بر روی سایت ویرایش شود؟
														<span asp-validation-for="IsActive" class="badge badge-light-danger mb-1"></span>
													</label>
												</div>
											</div>
											<!--end::آیتم-->
										</div>
										<!--begin::Col-->
									</div>
								</div>
							</div>
							<!--end::کارت body-->
						</div>
						<!--end::details نمایش-->
						<!--begin::Actions-->
						<div class="text-start">
							<button type="submit" class="btn btn-light-warning fw-bold me-3"><i class="ki-duotone ki-pencil fs-3"><span class="path1"></span><span class="path2"></span></i><span class="indicator-label">ویرایش اطلاعات</span></button>
							<a asp-action="Index" asp-controller="AdminDashboard" class="btn btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
								<i class="ki-duotone ki-home fs-3">
								</i>
								انصراف و بازگشت
							</a>
						</div>
						<!--end::Actions-->
					</form>
					<!--end:Form-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->
