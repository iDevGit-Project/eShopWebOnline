@model UpdateSliderViewModel

@{
	ViewData["Title:"] = "پنل مدیریت | فراخوانی لیست اسلایدرهای سمت مدیر";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" asp-append-version="true" />

@section scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">ویرایش اسلایدرها</span>
							<span class="text-muted mt-1 fw-semibold fs-7">ویرایش اطلاعات مربوط به اسلایدر ها در فروشگاه</span>
						</h3>
						<a asp-action="Index" asp-controller="Slider" class="btn  btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
							<i class="ki-duotone ki-home fs-3">
							</i>
							بازگشت به لیست اسلایدرها
						</a>
					</div>
					<!--begin:Form-->
					<form asp-controller="Slider" asp-action="Update"
						  method="post"
						  data-ajax="true"
						  data-callback=""
						  data-action="Refresh"
						  enctype="multipart/form-data">
						<input type="hidden" asp-for="SliderId" />
						<!--begin::details نمایش-->
						<div class="card mb-5 d-flex flex-column nav-group nav-group-outline mx-auto" id="myForm">
							<!--begin::کارت body-->
							<div class="card-body p-9">
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="Link" class="col-lg-4 fw-semibold fw-bold">
										آدرس پیوند یا لینک برای اسلایدر
										<span class="ms-1" data-bs-toggle="tooltip" title="مثال: http://www.mysite.com/slider">
											<i class="ki-outline ki-information fs-7"></i>
										</span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="Link" id="kt_docs_maxlength_custom_text" maxlength="512 " disabled class="form-control border-warning bg-light-warning FEN" autocomplete="off" placeholder="یک پیوند یا لینک برای اسلایدر خود وارد نمایید.">
										<span asp-validation-for="Link" class="badge bg-red-thunderbird bg-font-red-thunderbird"></span>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--begin::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label class="col-lg-4 fw-semibold fw-bold">بارگزاری تصویر اسلایدر</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<label for="files" class="btn fw-bold btn-light-danger">انتخاب و بارگزاری تصویر اسلایدر...</label>
										<span class="badge badge-light-danger fs-5 FEN fw-bold text-dark">png, jpg, jpeg: پسوند های مجاز</span>
										<input asp-for="ImgName" style="display:none;" type="file" id="files" class="form-control FEN input_container">
										<span asp-validation-for="ImgName" class="badge bg-red-thunderbird bg-font-red-thunderbird"></span>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label class="col-lg-4 fw-semibold fw-bold">آیا تصویر اسلایدر در سایت فعال شود؟</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<div class="form-check form-switch form-check-custom form-check-solid me-10">
											<input asp-for="IsActive" class="form-check-input h-30px w-50px" style="cursor:pointer" onclick="confirmdSwitchSliderCommand()" type="checkbox" id="flexSwitch30x50" />
											<label class="form-check-label" for="flexSwitch30x50">
												جهت ثبت نهایی عملیات بر وری دکمه <span class="badge badge-light-warning fw-bold"> ویرایش اطلاعات</span> کلیک نمایید.
											</label>
										</div>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Input group-->
								<!--end::Input group-->
							</div>
							<!--end::کارت body-->
						</div>
						<!--end::details نمایش-->
						<!--begin::Actions-->
						<div class="text-start">
							<button type="submit" class="btn btn-light-warning me-3"><i class="ki-duotone ki-pencil fs-3"><span class="path1"></span><span class="path2"></span></i><span class="indicator-label">ویرایش اطلاعات</span></button>
							<a asp-action="Index" asp-controller="AdminDashboard" class="btn btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
								<i class="ki-duotone ki-home fs-3">
								</i>
								انصراف و بازگشت
							</a>
						</div>
						<!--end::Actions-->
					</form>
					<!--end:Form-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->
@section AdminScripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

	<!--اسکریپت تغییر نام عکس انتخاب شده-->
	<script>
		document.querySelector("#files").onchange = function () {
			const fileName = this.files[0]?.name;
			const label = document.querySelector("label[for=files]");
			label.innerText = fileName ?? "تصویر اسلایدر خود را انتخاب و بارگزاری نمایید ...";
		};
	</script>
	<!--==================================================================-->
	<script>
		// نمایش حداکثر تعداد کاراکتر وارد شده به فارسی
		$('#kt_docs_maxlength_custom_text').maxlength({
			threshold: 512,
			warningClass: "badge badge-danger",
			limitReachedClass: "badge badge-primary",
			separator: ' از ',
			preText: ' حداکثر ',
			postText: 'کاراکتر استفاده شده است.',
			validate: true
		});
	</script>
	<!-- Refresh Data in Tables -->
	<script>
		$('#kt_refresh_datatable').on('click', function () {
			// نمایش فرم انیمیشن در زمان ثبت اطلاعات
			const loadingEl = document.createElement("div");
			document.body.prepend(loadingEl);
			loadingEl.classList.add("page-loader");
			loadingEl.classList.add("flex-column");
			loadingEl.classList.add("bg-dark");
			loadingEl.classList.add("bg-opacity-75");
			loadingEl.innerHTML = `
				<span class="spinner-border text-primary" role="status"></span>
				<span class="text-gray-100 fs-5 mt-5">سیستم در حال بروزرسانی اطلاعات ...</span>`;
			KTApp.showPageLoading();
			setTimeout(function () {
				KTApp.hidePageLoading();
				loadingEl.remove();
				window.location.reload();
			}, 2200);
			setTimeout(function () {
				toastr.options = {
					"debug": false,
					"closeButton": false,
					"newestOnTop": false,
					"progressBar": false,
					"positionClass": "toastr-top-center",
					"preventDuplicates": false,
					"showDuration": "600",
					"hideDuration": "2200",
					"timeOut": "2200",
					"extendedTimeOut": "2200",
					"showEasing": "swing",
					"hideEasing": "linear",
					"showMethod": "fadeIn",
					"hideMethod": "fadeOut"
				};
				toastr.success("بروزرسانی انجام شد.");
			}, 800);
		})
	</script>
