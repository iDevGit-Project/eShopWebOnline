@model IEnumerable<GetCategoriesViewModel>

@{
	ViewData["Title:"] = "پنل مدیریت | فراخوانی لیست دسته بندی های سمت مدیر";
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">لیست دسته بندی ها</span>
							<span class="text-muted mt-1 fw-semibold fs-7">لیست دسته بندی های موجود در فروشگاه</span>
						</h3>
						<a href="/Administrator/" class="btn btn-sm btn-light-dark h-40px" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
							<i class="ki-duotone ki-home fs-3">
							</i>
							بازگشت
						</a>
					</div>
					@await Component.InvokeAsync("ResultComponent")
					<!--نمایش پیغام موفقیت آمیز بودن ثبت یا خطای درج اطلاعات در برنامه-->
					@if (TempData["Result"] != null)
					{
						if (TempData["Result"].ToString() == "true")
						{
							<script>
								toastr.options = {
									"closeButton": false,
									"debug": false,
									"newestOnTop": false,
									"progressBar": true,
									"positionClass": "toastr-top-center",
									"preventDuplicates": false,
									"onclick": null,
									"showDuration": "300",
									"hideDuration": "350",
									"timeOut": "1800",
									"extendedTimeOut": "1000",
									"showEasing": "swing",
									"hideEasing": "linear",
									"showMethod": "fadeIn",
									"hideMethod": "fadeOut"
								};
								toastr.success("برند شما با موفقیت حذف گردید.");
							</script>
						}
					}
					<!--end::heading-->
					<!--start::Toolbar-->
					<div class="card-header border-0 pt-6">
						<!--begin::کارت title-->
						<div class="card-title">
							<a asp-action="Create" asp-controller="Category" class="btn btn-sm btn-primary me-3" data-bs-toggle="tooltip" title="ثبت اطلاعات دسته بندی جدید">
								<i class="ki-duotone ki-plus fs-2">
								</i>
								ثبت دسته بندی جدید
							</a>
							<!--begin::جستجو-->
							<div class="d-flex align-items-center position-relative my-1">
								<i class="ki-outline ki-magnifier fs-2 position-absolute ms-4"></i>
								<input type="text" id="categoriesSearch" class="form-control  w-250px ps-12" autocomplete="off" placeholder="جستجو اطلاعات">
								<div id="autoCompleteDiv"></div>
								<!--begin::Spinner-->
								<span class="search-spinner position-absolute top-50 end-0 translate-middle-y lh-0 d-none me-1" data-kt-filter="spinner">
									<span class="spinner-border h-15px w-15px align-middle text-gray-400"></span>
								</span>
								<!--end::Spinner-->
							</div>
							<!--end::جستجو-->
							<!--begin::خروجی buttons-->
							<div id="kt_ecommerce_report_views_export" class="d-none"><div class="dt-buttons btn-group flex-wrap"><button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="kt_ecommerce_report_views_table" type="button"><span>Copy</span></button> <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="kt_ecommerce_report_views_table" type="button"><span>Excel</span></button> <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="kt_ecommerce_report_views_table" type="button"><span>CSV</span></button> <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="kt_ecommerce_report_views_table" type="button"><span>PDF</span></button> </div></div>
							<!--end::خروجی buttons-->
						</div>
						<!--begin::کارت title-->
						<!--begin::کارت toolbar-->
						<div class="card-toolbar">
							<!--begin::Toolbar-->
							<div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
								<!--begin::Menu 1-->
								<button type="button" id="kt_refresh_datatable" class="btn  btn-sm btn-light-success me-3" data-bs-toggle="tooltip" title="بروزرسانی لیست دسته بندی ها">
									<!--begin::Indicator label-->
									<span class="indicator-label">بروزرسانی اطلاعات</span>
									<!--end::Indicator label-->
									<!--begin::Indicator progress-->
									<span class="indicator-progress">
										در حال انجام ...<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
									</span>
									<!--end::Indicator progress-->
								</button>
								<!--end::Menu 1-->
								<!--end::فیلتر-->
								<!--begin::خروجی-->
								<button type="button" class="btn  btn-sm btn-light-success" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-bs-toggle="tooltip" title="دریافت خروجی از اطلاعات جدول">
									<i class="ki-duotone ki-exit-down fs-2"><span class="path1"></span><span class="path2"></span></i>
									دریافت خروجی
								</button>
								<div id="kt_datatable_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
									<div class="menu-item px-3">
										<a href="#" class="menu-link px-3" data-kt-export="pdf">
											Export as PDF
										</a>
									</div>
									<div class="menu-item px-3">
										<a href="#" class="menu-link px-3" data-kt-export="excel">
											Export as Excel
										</a>
									</div>
									<div id="kt_datatable_buttons" class="d-none"></div>
								</div>
								<!--end::خروجی-->
							</div>
							<!--end::Toolbar-->
						</div>
						<!--end::کارت toolbar-->
					</div>
					<!--end::Toolbar-->
					<!--begin::TABELS-->
					<table id="datatable_categories" class="table table-rounded table-striped border table-row-bordered gy-5 gs-7">
						<thead>
							<tr class="fw-semibold fs-6">
								<th class="fw-semibold fw-bolder text-start fs-6">ردیف</th>
								<th class="fw-semibold fw-bolder text-center fs-6">تصویر/آیکن</th>
								<th class="fw-semibold fw-bolder text-start fs-6">نام دسته بندی</th>
								<th class="fw-semibold fw-bolder text-end FEN fs-6">English name of the category</th>
								<th class="fw-semibold fw-bolder text-center fs-6">وضعیت</th>
								<th class="fw-semibold fw-bolder text-center fs-6">فرعی یا اصلی بودن دسته بندی</th>
								<th class="fw-semibold fw-bolder text-end fs-6">عملیات</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="text-start fs-6">@item.CategoryId</td>
									<td class="text-center fs-6">
										<img class="lozad rounded mw-100" src="@ImagePathExtention.PathCategoryImageClient/@item.ImgName" style="height: 41px" />
									</td>
									<td class="text-start fs-6">@item.FaTitle</td>
									<td class="text-end FEN fs-6">@item.EnTitle</td>
									<td class="text-center">
										<span class="badge @(item.IsActive?"badge-light-primary":"badge-light-danger")">@(item.IsActive ? "فعال است." : "غیرفعال است.")</span>
									</td>
									<td class="text-center">
										<span class="badge @(item.IsMain?"badge-light-primary":"badge-light-success")">@(item.IsMain ? "منوی اصلی" : "زیرمنو")</span>
									</td>
									<td class="text-end justify-content-start flex-shrink-0">
										<!--begin::Icon-->
										<div>
											<!--begin::ویرایش-->
											<a href="/Administrator/Category/Update/@item.CategoryId" class="bg-hover-light-warning text-hover-warning btn btn-icon btn-color-muted btn-bg-light btn-active-color-primary  me-3" data-bs-toggle="tooltip" title="ویرایش">
												<i class="ki-outline ki-pencil fs-3"></i>
											</a>
											<!--end::ویرایش-->
											<!--begin::غیرفعال سازی-->
											<a href="/Administrator/Category/Remove/@item.CategoryId" class="bg-hover-light-danger text-hover-danger btn btn-icon btn-color-muted btn-bg-light btn-active-color-danger  me-3" data-bs-toggle="tooltip" title="حذف کردن">
												<i class="ki-outline ki-trash fs-3"></i>
											</a>
											<!--begin::غیرفعال سازی-->
										</div>
										<!--end::Icon-->
									</td>
								</tr>
							}
						</tbody>
					</table>
					<!--end::TABELS-->
					<div class="row">
						<div class="col-sm-12 col-md-12 col-lg-12 text-center">
							<h3 class="card-title align-items-start flex-column">
								<span class="text-muted mt-1 fw-semibold fs-7">لیست برندهای موجود : <b class="badge badge-light-success fw-bolder" data-bs-toggle="tooltip" title="تعداد برندهای ثبت شده"> @Model.Count() </b> می باشد. </span>
							</h3>
						</div>
					</div>
					<!--end::links-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->
