@model UpdateBrandViewModel

@{
	ViewData["Title:"] = "پنل مدیریت | ویرایش اطلاعات لیست برندهای سمت مدیر";
}


@section scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">ویرایش اطلاعات برند</span>
							<span class="text-muted mt-1 fw-semibold fs-7">ویرایش اطلاعات مربوط به برند جاری در فروشگاه</span>
						</h3>
						<a asp-action="Index" asp-controller="Brand" class="btn  btn-light-dark h-40px" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
							<i class="ki-duotone ki-home fs-3">
							</i>
							بازگشت به لیست برندها
						</a>
					</div>
					<!--begin:Form-->
					<form asp-controller="Brand" asp-action="Update"
						  method="post"
						  data-ajax="true"
						  data-callback=""
						  data-action="Refresh"
						  enctype="multipart/form-data">
						<input type="hidden" asp-for="BrandId" />
						<!--begin::details نمایش-->
						<div class="card mb-5 d-flex flex-column nav-group nav-group-outline mx-auto" id="myForm">
							<!--begin::کارت body-->
							<div class="card-body p-9">
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="FaTitle" class="col-lg-4 fw-semibold fw-bold">نام برند (فارسی)</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="FaTitle" class="form-control border-warning bg-light-warning text-warning fw-semibold fw-bold" autocomplete="off" placeholder="نام برند را به فارسی وارد نمایید.">
										<span asp-validation-for="FaTitle" class="badge bg-red-thunderbird bg-font-red-thunderbird"></span>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--begin::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="EnTitle" class="col-lg-4 fw-semibold fw-bold">
										نام برند (انگلیسی)
										<span class="ms-1" data-bs-toggle="tooltip" title="کاربرگرامی: نام برند میبایست به صورت لاتین نوشته شود">
											<i class="ki-outline ki-information fs-7"></i>
										</span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="EnTitle" class="form-control border-warning bg-light-warning text-warning fw-semibold fw-bold FEN text-end" autocomplete="off" placeholder="Enter the brand name in English">
										<span asp-validation-for="EnTitle"></span>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Input group-->
								<!--begin::Input group-->
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="DesCripton" class="col-lg-4 fw-semibold fw-bold">توضیحات برند</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="DesCripton" class="form-control border-warning bg-light-warning text-warning fw-semibold fw-bold" autocomplete="off" placeholder="شما می توانید برای برند خود توضیحاتی را به فارسی وارد نمایید.">
										<span asp-validation-for="DesCripton"></span>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--end::Input group-->
								<!--begin::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label class="col-lg-4 fw-semibold fw-bold">بارگزاری تصویر شاخص</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<label for="files" class="btn fw-bold btn-light-danger">تصویر برند خود را انتخاب و بارگزاری نمایید ...</label>
										<input asp-for="ImgName" style="display:none;" type="file" id="files" class="form-control  bg-light-warning text-warning FEN fw-semibold fw-bold input_container">
										<!--begin::توضیحات-->
										<div class="text-muted fs-7">پسوند های مجاز : <span class="fs-7 text-dark fw-bold badge badge-light-danger fw-semibold">png, jpg, jpeg</span></div>
										<!--end::توضیحات-->
									</div>
									<!--end::Col-->
								</div>
								<!--end::Input group-->
							</div>
							<!--end::کارت body-->
						</div>
						<!--end::details نمایش-->
						<!--begin::Actions-->
						<div class="text-start">
							<button type="submit" class="btn btn-light-warning me-3"><i class="ki-duotone ki-pencil fs-3"><span class="path1"></span><span class="path2"></span></i><span class="indicator-label">ویرایش اطلاعات</span></button>
							<a asp-action="Index" asp-controller="AdminDashboard" class="btn btn-light-dark h-40px" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
								<i class="ki-duotone ki-home fs-3">
								</i>
								انصراف و بازگشت
							</a>
						</div>
						<!--end::Actions-->
					</form>
					<!--end:Form-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->
@section AdminScripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

	<!--اسکریپت تغییر نام عکس انتخاب شده-->
	<script>
		document.querySelector("#files").onchange = function () {
			const fileName = this.files[0]?.name;
			const label = document.querySelector("label[for=files]");
			label.innerText = fileName ?? "تصویر برند خود را انتخاب و بارگزاری نمایید ...";
		};
	</script>
	<!--==================================================================-->
	<!-- Refresh Data in Tables -->
	<script>
		$('#kt_refresh_datatable').on('click', function () {
			// نمایش فرم انیمیشن در زمان ثبت اطلاعات
			const loadingEl = document.createElement("div");
			document.body.prepend(loadingEl);
			loadingEl.classList.add("page-loader");
			loadingEl.classList.add("flex-column");
			loadingEl.classList.add("bg-dark");
			loadingEl.classList.add("bg-opacity-75");
			loadingEl.innerHTML = `
					<span class="spinner-border text-primary" role="status"></span>
					<span class="text-gray-100 fs-5 mt-5">سیستم در حال بروزرسانی اطلاعات ...</span>`;
			KTApp.showPageLoading();
			setTimeout(function () {
				KTApp.hidePageLoading();
				loadingEl.remove();
				window.location.reload();
			}, 2200);
			setTimeout(function () {
				toastr.options = {
					"debug": false,
					"closeButton": false,
					"newestOnTop": false,
					"progressBar": false,
					"positionClass": "toastr-top-center",
					"preventDuplicates": false,
					"showDuration": "600",
					"hideDuration": "2200",
					"timeOut": "2200",
					"extendedTimeOut": "2200",
					"showEasing": "swing",
					"hideEasing": "linear",
					"showMethod": "fadeIn",
					"hideMethod": "fadeOut"
				};
				toastr.success("بروزرسانی انجام شد.");
			}, 800);
			//$('#frmEditProduct')[0].reset();
			//document.getElementById("frmEditProduct").reset(); //or $('#form2')[0].reset();
		})
	</script>
	<!--===================================================================-->
	<!-- اسکریپت آژاکس مربوط به حذف قیمت -->
	<script>
		function emptyInputInvalid(brandid) {
			Swal.fire({
				showClass: {
					popup: `
								animate__animated
								animate__fadeInUp
								animate__faster`
				},
				hideClass: {
					popup: `
								animate__animated
								animate__fadeOutDown
								animate__faster`
				},
				icon: 'warning',
				title: "آیا از حذف قیمت انتخاب شده مطمئن هستید ؟",
				text: "حذف قیمت جاری از سیستم",
				confirmButtonText: "بلی, حذف شود.",
				cancelButtonText: "خیر, انصراف!",
				position: "top-center",
				showCancelButton: true,
				reverseButtons: false,
				customClass: {
					confirmButton: "btn btn-danger",
					cancelButton: "btn btn-secondary"
				}
			})
		}
	</script>
	<!-- اسکریپت آژاکس مربوط به حذف قیمت -->
}
