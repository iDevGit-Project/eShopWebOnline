@model AddOrUpdateProductReviewViewModel

@{
	ViewData["Title:"] = "پنل مدیریت | ثبت و بروزرسانی توضیحات کالا یا محصول سمت مدیر";
}

@section scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">ثبت و بروزرسانی توضیحات</span>
							<span class="text-muted mt-1 fw-semibold fs-7">ثبت و بروزرسانی اطلاعات مربوط به محصول یا کالای جاری در فروشگاه</span>
						</h3>
						<a asp-action="Index" asp-controller="Product" class="btn  btn-sm btn-light-dark h-40px" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
							<i class="ki-duotone ki-home fs-3">
							</i>
							بازگشت به لیست کالا یا محصول ها
						</a>
					</div>
					<!--begin:Form-->
					<form asp-controller="Product" asp-action="ProductReview"
						  method="post"
						  data-ajax="true"
						  data-callback=""
						  data-action="Refresh"
						  enctype="multipart/form-data">
						<input type="hidden" asp-for="ProductId" />
						<!--begin::details نمایش-->
						<div class="card mb-5 d-flex flex-column nav-group nav-group-outline mx-auto" id="myForm">
							<!--begin::کارت body-->
							<div class="card-body p-9">
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="Positive" class="col-lg-5 fw-semibold fw-bold">
										<span class="badge badge-light-primary fs-base">
											<i class="ki-outline ki-arrow-up fs-5 text-primary"></i> نقاط قوت کالا
										</span>
										<span asp-validation-for="Positive" class="badge badge-light-danger mb-1"></span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-7">
										<input type="text" asp-for="Positive" class="form-control border-primary fw-semibold fw-bold" autocomplete="off" placeholder="نقاط قوت کالا یا محصول را وارد نمایید.">
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="Negative" class="col-lg-5 fw-semibold fw-bold">
										<span class="badge badge-light-danger fs-base">
											<i class="ki-outline ki-arrow-down fs-5 text-danger"></i> نقاط ضعف کالا
										</span>
										<span asp-validation-for="Negative" class="badge badge-light-danger mb-1"></span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-7">
										<input type="text" asp-for="Negative" class="form-control border-danger fw-semibold fw-bold" autocomplete="off" placeholder="نقاط ضعف کالا یا محصول را وارد نمایید.">
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="Review" class="col-lg-5 fw-semibold fw-bold">
										توضیحات کالا را وارد کنید
										<span asp-validation-for="Review" class="badge badge-light-danger mb-1"></span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-7">
										<textarea type="text" asp-for="Review" id="kt_docs_maxlength_custom_text" maxlength="4096 " aria-label="With textarea" class="form-control border-primary hover-scroll-y h-200px px-5 fw-semibold fw-bold" autocomplete="off" placeholder="نقاط ضعف کالا یا محصول را وارد نمایید." style="text-align:justify"></textarea>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
							</div>
							<!--end::کارت body-->
						</div>
						<!--end::details نمایش-->
						<!--begin::Actions-->
						<div class="text-start">
							<button type="submit" class="btn  btn-sm btn-primary me-3"><i class="ki-duotone ki-plus fs-2"></i><span class="indicator-label">ثبت توضیحات محصول</span></button>
							<a asp-action="Index" asp-controller="AdminDashboard" class="btn  btn-sm btn-light-dark h-40px" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
								<i class="ki-duotone ki-home fs-3">
								</i>
								انصراف و بازگشت
							</a>
						</div>
						<!--end::Actions-->
					</form>
					<!--end:Form-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->
@section AdminScripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

	<!-- Refresh Data in Tables -->
	<script>
		$('#kt_refresh_datatable').on('click', function () {
			// نمایش فرم انیمیشن در زمان ثبت اطلاعات
			const loadingEl = document.createElement("div");
			document.body.prepend(loadingEl);
			loadingEl.classList.add("page-loader");
			loadingEl.classList.add("flex-column");
			loadingEl.classList.add("bg-dark");
			loadingEl.classList.add("bg-opacity-75");
			loadingEl.innerHTML = `
									<span class="spinner-border text-primary" role="status"></span>
									<span class="text-gray-100 fs-5 mt-5">سیستم در حال بروزرسانی اطلاعات ...</span>`;
			KTApp.showPageLoading();
			setTimeout(function () {
				KTApp.hidePageLoading();
				loadingEl.remove();
				window.location.reload();
			}, 2200);
			setTimeout(function () {
				toastr.options = {
					"debug": false,
					"closeButton": false,
					"newestOnTop": false,
					"progressBar": false,
					"positionClass": "toastr-top-center",
					"preventDuplicates": false,
					"showDuration": "600",
					"hideDuration": "2200",
					"timeOut": "2200",
					"extendedTimeOut": "2200",
					"showEasing": "swing",
					"hideEasing": "linear",
					"showMethod": "fadeIn",
					"hideMethod": "fadeOut"
				};
				toastr.success("بروزرسانی انجام شد.");
			}, 800);
		})
	</script>
	<!--===================================================================-->
	<!-- اسکریپت آژاکس مربوط به حذف قیمت -->
	<script>
		function emptyInputInvalid(brandid) {
			Swal.fire({
				showClass: {
					popup: `
							animate__animated
							animate__fadeInUp
							animate__faster`
				},
				hideClass: {
					popup: `
							animate__animated
							animate__fadeOutDown
							animate__faster`
				},
				icon: 'warning',
				title: "آیا از حذف قیمت انتخاب شده مطمئن هستید ؟",
				text: "حذف قیمت جاری از سیستم",
				confirmButtonText: "بلی, حذف شود.",
				cancelButtonText: "خیر, انصراف!",
				position: "top-center",
				showCancelButton: true,
				reverseButtons: false,
				customClass: {
					confirmButton: "btn btn-danger",
					cancelButton: "btn btn-secondary"
				}
			})
		}
	</script>
	<!-- اسکریپت آژاکس مربوط به حذف قیمت -->
}