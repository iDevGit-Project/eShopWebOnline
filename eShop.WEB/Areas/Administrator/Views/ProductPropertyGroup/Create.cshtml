@model CreatePropertyGroupViewModel

@{
	ViewData["Title:"] = "پنل مدیریت | فراخوانی لیست گروه بندی محصولات یا کالاهای سمت مدیر";
}

@section scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">ثبت نام گروه بندی محصولات یا کالاهای جدید</span>
							<span class="text-muted mt-1 fw-semibold fs-7">ثبت اطلاعات مربوط به گروه بندی محصولات یا کالاهای جدید در فروشگاه</span>
						</h3>
						<a asp-action="Index" asp-controller="ProductPropertyGroup" class="btn  btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به لیست گروه بندی محصولات یا کالاها">
							<i class="ki-outline ki-basket fs-3">
							</i>
							بازگشت به لیست گروه بندی محصولات یا کالا ها
						</a>
					</div>
					<!--begin:Form-->
					<form asp-controller="ProductPropertyGroup" asp-action="Create"
						  method="post"
						  data-ajax="true"
						  data-callback=""
						  data-action="Refresh"
						  enctype="multipart/form-data">
						<!--begin::details نمایش-->
						<div class="card mb-5 d-flex flex-column nav-group nav-group-outline mx-auto" id="myForm">
							<!--begin::کارت body-->
							<div class="card-body p-9">
								<!--begin::Row-->
								<div class="row">
									<!--begin::Tags-->
									<label asp-for="GroupTitle" class="col-lg-6 fw-semibold fw-bold" for="GroupTitle">
										نام گروه بندی (فارسی).
										<span asp-validation-for="GroupTitle" class="badge badge-light-danger mb-1"></span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-6">
										<input type="text" asp-for="GroupTitle" id="kt_docs_maxlength_custom_text" maxlength="64 " class="form-control border-primary text-dark" autocomplete="off" placeholder="نام گروه بندی محصولات یا کالا را به فارسی وارد نمایید.">
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
							</div>
							<!--end::کارت body-->
						</div>
						<!--end::details نمایش-->
						<!--begin::Actions-->
						<div class="text-start">
							<button type="submit" class="btn btn-light-primary fw-bold me-3"><i class="ki-duotone ki-plus fs-2"></i><span class="indicator-label">ثبت اطلاعات</span></button>
							<a asp-action="Index" asp-controller="AdminDashboard" class="btn  btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
								<i class="ki-duotone ki-home fs-3">
								</i>
								انصراف و بازگشت
							</a>
						</div>
						<!--end::Actions-->
					</form>
					<!--end:Form-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->
@section AdminScripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

	<!--==================================================================-->
	<script>
		// نمایش حداکثر تعداد کاراکتر وارد شده به فارسی
		$('#kt_docs_maxlength_custom_text').maxlength({
			threshold: 64,
			warningClass: "badge badge-danger",
			limitReachedClass: "badge badge-primary",
			separator: ' از ',
			preText: ' حداکثر ',
			postText: 'کاراکتر استفاده شده است.',
			validate: true
		});
	</script>
	<!-- Refresh Data in Tables -->
	<script>
		$('#kt_refresh_datatable').on('click', function () {
			// نمایش فرم انیمیشن در زمان ثبت اطلاعات
			const loadingEl = document.createElement("div");
			document.body.prepend(loadingEl);
			loadingEl.classList.add("page-loader");
			loadingEl.classList.add("flex-column");
			loadingEl.classList.add("bg-dark");
			loadingEl.classList.add("bg-opacity-75");
			loadingEl.innerHTML = `
							<span class="spinner-border text-primary" role="status"></span>
							<span class="text-gray-100 fs-5 mt-5">سیستم در حال بروزرسانی اطلاعات ...</span>`;
			KTApp.showPageLoading();
			setTimeout(function () {
				KTApp.hidePageLoading();
				loadingEl.remove();
				window.location.reload();
			}, 2200);
			setTimeout(function () {
				toastr.options = {
					"debug": false,
					"closeButton": false,
					"newestOnTop": false,
					"progressBar": false,
					"positionClass": "toastr-top-center",
					"preventDuplicates": false,
					"showDuration": "600",
					"hideDuration": "2200",
					"timeOut": "2200",
					"extendedTimeOut": "2200",
					"showEasing": "swing",
					"hideEasing": "linear",
					"showMethod": "fadeIn",
					"hideMethod": "fadeOut"
				};
				toastr.success("بروزرسانی انجام شد.");
			}, 800);
		})
	</script>
	<!--===================================================================-->
	<!-- اسکریپت آژاکس مربوط به بررسی مقدار ورودی اطلاعات-->
	<script>
		function emptyInputInvalid() {
			Swal.fire({
				icon: 'warning',
				title: "آیا از حذف قیمت انتخاب شده مطمئن هستید ؟",
				text: "حذف قیمت جاری از سیستم",
				confirmButtonText: "بلی, حذف شود.",
				cancelButtonText: "خیر, انصراف!",
				position: "top-center",
				showCancelButton: true,
				reverseButtons: false,
				customClass: {
					confirmButton: "btn btn-danger",
					cancelButton: "btn btn-secondary"
				}
			})
		}
	</script>
	<!-- اسکریپت آژاکس مربوط به بررسی مقدار ورودی اطلاعات -->
}
