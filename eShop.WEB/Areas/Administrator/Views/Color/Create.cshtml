@model CreateColorViewModel

@{
	ViewData["Title:"] = "پنل مدیریت | فراخوانی لیست رنگ های سمت مدیر";
}

@section scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<!--begin::content container-->
<div id="kt_app_content_container" class="app-container container-xxl">
	<!--begin::row-->
	<div class="row gy-5 g-xl-10">
		<!--begin::col-->
		<div class="col-xl-12 mb-xl-12">
			<!--begin::engage widget 1-->
			<div class="card h-md-100" dir="rtl">
				<!--begin::body-->
				<div class="card-body align-items-start flex-column">
					<!--begin::heading-->
					<div class="card-header align-items-start px-0 border-0 pt-50">
						<h3 class="card-title align-items-start flex-column">
							<span class="card-label fw-bold text-dark">ثبت رنگ جدید</span>
							<span class="text-muted mt-1 fw-semibold fs-7">ثبت اطلاعات مربوط به رنگ جدید در فروشگاه</span>
						</h3>
						<a asp-action="Index" asp-controller="Color" class="btn  btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
							<i class="ki-duotone ki-home fs-3">
							</i>
							بازگشت به لیست دسته رنگ ها
						</a>
					</div>
					<!--begin:Form-->
					<form asp-controller="Color" asp-action="Create"
						  method="post"
						  data-ajax="true"
						  data-callback=""
						  data-action="Refresh"
						  enctype="multipart/form-data">
						<!--begin::details نمایش-->
						<div class="card mb-5 d-flex flex-column nav-group nav-group-outline mx-auto" id="myForm">
							<!--begin::کارت body-->
							<div class="card-body p-9">
								<!--begin::Row-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="ColorName" class="col-lg-4 fw-semibold fw-bold">
										نام رنگ.
										<span asp-validation-for="ColorName" class="badge badge-light-danger mb-1"></span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<input type="text" asp-for="ColorName" id="kt_docs_maxlength_custom_text" maxlength="64 " class="form-control border-primary" autocomplete="off" placeholder="نام رنگ را به فارسی وارد نمایید.">
									</div>
									<!--end::Col-->
								</div>
								<!--end::Row-->
								<!--begin::Input group-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label asp-for="ColorCode" class="col-lg-4 fw-semibold fw-bold">
										کد رنگ.
										<span asp-validation-for="ColorCode" class="badge badge-light-danger mb-1"></span>
										<span class="ms-1 FEN" data-bs-toggle="tooltip" title="راهنمایی: 0b0b0b#">
											<i class="ki-outline ki-information fs-7"></i>
										</span>
									</label>
									<!--end::Tags-->
									<!--begin::Col-->
									<div class="col-lg-8">
										<div class="minicolors minicolors-theme-bootstrap minicolors-position-top minicolors-position-right">
                                            <input type="text" asp-for="ColorCode" id="position-top-right" class="form-control border-primary demo FEN minicolors-input" data-position="top right" value="#0088cc" size="7">
                                            <span class="minicolors-swatch minicolors-sprite">
												<span class="minicolors-swatch-color" style="background-color: rgb(80 205 137); cursor:pointer">
                                                </span>
                                            </span>
										</div>
									</div>
									<!--end::Col-->
								</div>
								<!--end::Input group-->
								<!--begin::Col-->
								<div class="row mb-7">
									<!--begin::Tags-->
									<label class="col-lg-4 fw-semibold fw-bold">
										  فعال یا غیر فعالسازی رنگ.
									</label>
									<!--end::Tags-->
									<div class="col-lg-8">
										<div class="d-flex align-items-center border border-dashed border-gray-300 rounded px-7 py-3">
											<!--begin::آیتم-->
											<div class="d-flex flex-aligns-center pe-10 pe-lg-20">
												<div class="form-check form-switch form-check-custom form-check-solid me-10">
													<input asp-for="IsActive" class="form-check-input h-30px w-50px" onclick="confirmdSwitchColorCommand()" type="checkbox" id="flexSwitch30x50" style="cursor: pointer" />
													<label class="form-check-label fw-bold text-dark" for="flexSwitch30x50">
														رنگ ثبت شده فعال شود؟
														<span asp-validation-for="IsActive" class="badge badge-light-danger mb-1"></span>
													</label>
												</div>
											</div>
											<!--end::آیتم-->
										</div>
										<!--begin::Col-->
									</div>
								</div>
								<!--end::Col-->
							</div>
							<!--end::کارت body-->
						</div>
						<!--end::details نمایش-->
						<!--begin::Actions-->
						<div class="text-start">
							<button type="submit" class="btn btn-light-primary fw-bold me-3"><i class="ki-duotone ki-plus fs-2"></i><span class="indicator-label">ثبت اطلاعات</span></button>
							<a asp-action="Index" asp-controller="AdminDashboard" class="btn  btn-sm btn-light-dark" data-bs-toggle="tooltip" title="بازگشت به صفحه اصلی">
								<i class="ki-duotone ki-home fs-3">
								</i>
								انصراف و بازگشت
							</a>
						</div>
						<!--end::Actions-->
					</form>
					<!--end:Form-->
				</div>
				<!--end::body-->
			</div>
			<!--end::engage widget 1-->
		</div>
		<!--end::col-->
	</div>
	<!--end::row-->
</div>
<!--end::content container-->

@section js {
	<partial name="_MultiSelectJsPartial" />
}
@section AdminScripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

	<!--اسکریپت تغییر نام عکس انتخاب شده-->
	<script>
		document.querySelector("#files").onchange = function () {
			const fileName = this.files[0]?.name;
			const label = document.querySelector("label[for=files]");
			label.innerText = fileName ?? "تصویر دسته بندی خود را انتخاب و بارگزاری نمایید ...";
		};
	</script>
	<!--==================================================================-->
	<script>
		// نمایش حداکثر تعداد کاراکتر وارد شده به فارسی
		$('#kt_docs_maxlength_custom_text').maxlength({
			threshold: 64,
			warningClass: "badge badge-danger",
			limitReachedClass: "badge badge-primary",
			separator: ' از ',
			preText: ' حداکثر ',
			postText: 'کاراکتر استفاده شده است.',
			validate: true
		});
	</script>
	<!--===================================================================-->
	<script>
		// نمایش حداکثر تعداد کاراکتر وارد شده به انگلیسی
		$('#kt_docs_maxlength_custom_Entext').maxlength({
			threshold: 64,
			warningClass: "badge badge-danger",
			limitReachedClass: "badge badge-primary",
			separator: ' of ',
			preText: 'You have ',
			postText: ' chars remaining.',
			validate: true
		});
	</script>
	<!--===================================================================-->
	<!-- Refresh Data in Tables -->
	<script>
		$('#kt_refresh_datatable').on('click', function () {
			// نمایش فرم انیمیشن در زمان ثبت اطلاعات
			const loadingEl = document.createElement("div");
			document.body.prepend(loadingEl);
			loadingEl.classList.add("page-loader");
			loadingEl.classList.add("flex-column");
			loadingEl.classList.add("bg-dark");
			loadingEl.classList.add("bg-opacity-75");
			loadingEl.innerHTML = `
							<span class="spinner-border text-primary" role="status"></span>
							<span class="text-gray-100 fs-5 mt-5">سیستم در حال بروزرسانی اطلاعات ...</span>`;
			KTApp.showPageLoading();
			setTimeout(function () {
				KTApp.hidePageLoading();
				loadingEl.remove();
				window.location.reload();
			}, 2200);
			setTimeout(function () {
				toastr.options = {
					"debug": false,
					"closeButton": false,
					"newestOnTop": false,
					"progressBar": false,
					"positionClass": "toastr-top-center",
					"preventDuplicates": false,
					"showDuration": "600",
					"hideDuration": "2200",
					"timeOut": "2200",
					"extendedTimeOut": "2200",
					"showEasing": "swing",
					"hideEasing": "linear",
					"showMethod": "fadeIn",
					"hideMethod": "fadeOut"
				};
				toastr.success("بروزرسانی انجام شد.");
			}, 800);
		})
	</script>
	<!--===================================================================-->
	<!-- SweetAlert نمایش پیغام به کاربر توسط  -->
	<script>
		function confirmdSwitchColorCommand() {
			Swal.fire({
				showClass: {
					popup: `
								animate__animated
								animate__fadeInUp
								animate__faster`
				},
				hideClass: {
					popup: `
								animate__animated
								animate__fadeOutDown
								animate__faster`
				},
				icon: 'success',
				title: "عملیات فوق بر روی رنگ انتخاب شده انجام شد.",
				confirmButtonText: "انجام شد. بازگشت",
				position: "top-center",
				// footer: '<span class="badge badge-light-warning"> ثبت نهایی: فشردن دسکه ویرایش اطلاعات</span>'
				reverseButtons: false,
				customClass: {
					confirmButton: "btn btn-primary"
				}
			})
		}
	</script>
}
